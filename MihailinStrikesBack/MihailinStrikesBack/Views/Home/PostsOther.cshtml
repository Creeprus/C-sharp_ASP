<body style="background-color:blueviolet">

    <form asp-action="postsother" asp-controller="home" class="text-center">
        <div class="limiter" style="background-color:blueviolet">

            <div class="container-login100">


                <table>
                    <tr>


                        <td>
                            <a>Title</a>
                        </td>
                        <td>
                            <a>Image</a>
                        </td>

                        <td>
                            <a>Message</a>
                        </td>
                        <td>
