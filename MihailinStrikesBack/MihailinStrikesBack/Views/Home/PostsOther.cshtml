                    </tr>
                    @foreach (var item in Model.Post2Sprav)
                    {
                        <tr class="wrap-login100">

                            <td>@item.Post_ID.Title</td>
                            <td><img src="@item.Image_ID.PathImage" width="120" height="120" /></td>
                            <td>@item.Post_ID.Message</td>
                            <td>@item.Post_ID.DatePost </td>


                        </tr>

                    }
