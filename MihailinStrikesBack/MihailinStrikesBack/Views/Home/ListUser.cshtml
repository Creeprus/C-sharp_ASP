<body style="background-color:blueviolet">

    <div class="">
        <div class="container-login100">
            <div class="container-login100-form">
                <form method="get" asp-action="ListUser" class="login100-form validate-form">

                    <div class="form-inline form-group container-login100-form">
                        <label class="control-label">Login: </label>
                        <input type="text" value="@Model.FilterViewModel.SelectLogin" name="login" class="form-control" />

                        <input type="submit" value="Search" class="btn" />
                    </div>
                </form>

                <table class="table select2-container--above ">

                    <tr>

                     
                     
                        <td>
                            <a asp-action="ListUser" asp-route-sortORder="@Model.SortViewModel.EmailSort" style="color:black" asp-route-id="@Model.FilterViewModel.SelectId" asp-route-login="@Model.FilterViewModel.SelectLogin">
                                Email
                            </a>
                        </td>

                        <td>
                            <a asp-action="ListUser" asp-route-sortORder="@Model.SortViewModel.LoginSort" style="color:black" asp-route-id="@Model.FilterViewModel.SelectId" asp-route-login="@Model.FilterViewModel.SelectLogin">
                                Login
                            </a>
                        </td>

                        @*<td>Password</td>*@
                        @*<td>Description</td>
                            <td>Birthdate</td>*@
                    </tr>
                    @foreach (var item in Model.Users)
                    {if (item.Role_Id != 1)
                        {
                        <tr class="wrap-login100">
                            @*<td>@item.Id</td>*@
                            <td>@item.Email</td>
                            <td>@item.Login</td>
                            @*<td>@item.Password</td>
                                <td>@item.Description</td>
                                <td>@item.BirthDate</td>*@

                            <td><a asp-action="OtherUser" asp-controller="home" asp-route-id="@item.Id">Go to user's page</a></td>
                           
                 
                        </tr>
                        }
                    }
                </table>
             
                @if (Model.PageViewModel.HasPreviousPage)
                {
                    <a asp-action="ListUser"
                       asp-route-page="@(Model.PageViewModel.PageNumber-1)"
                     
                       asp-route-login-="@(Model.FilterViewModel.SelectLogin)"
                       asp-route-sortOrder="@(Model.SortViewModel.Current)"
                       style="color:black"
                       class="btn btn-outline-dark">Back</a>
                }
                @if (Model.PageViewModel.HasNextPage)
                {
                    <a asp-action="ListUser"
                       asp-route-page="@(Model.PageViewModel.PageNumber+1)"
                      
                       asp-route-login-="@(Model.FilterViewModel.SelectLogin)"
                       asp-route-sortOrder="@(Model.SortViewModel.Current)"
                       style="color:black"
                       class="btn btn-outline-dark">Forward</a>
                }

            </div>

        </div>
    </div>

</body>
