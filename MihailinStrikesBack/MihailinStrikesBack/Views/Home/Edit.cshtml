<body style="background-color:blueviolet">

    <div class="container-login100">
        <div class="">
            <form asp-action="edit" asp-controller="home" class="login100-form">
                <input type="hidden" asp-for="Id" />
                <div class="wrap-input100 validate-input">
                    <input type="email" asp-for="Email" placeholder="Email" class="form-control" />
                </div>
                <div class="wrap-input100 validate-input">
                    <input type="text" asp-for="Login" placeholder="Login" class="form-control" />
                </div>
                <div class="wrap-input100 validate-input">
                    <input type="password" asp-for="Password" placeholder="Password" class="form-control" />
                </div>
                <div class="wrap-input100 validate-input">
                    <input type="date" asp-for="BirthDate" placeholder="Date of Birth" class="form-control" />
                </div>
                @*<div class="wrap-input100 validate-input">
                    <a   class="form-control" >@Model.Role_Id</a>
                </div>*@
                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Изменить
                    </button>
                </div>
            </form>
            <!--===============================================================================================-->
            <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
            <!--===============================================================================================-->
            <script src="vendor/bootstrap/js/popper.js"></script>
            <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
            <!--===============================================================================================-->
            <script src="vendor/select2/select2.min.js"></script>
            <!--===============================================================================================-->
            <script src="js/main.js"></script>
        </div>
    </div>
</body>
